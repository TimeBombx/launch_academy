%h1 Create a new manufacturer

- if @manufacturer.errors
  %ul
    - @manufacturer.errors.full_messages.each do |error|
      %li= error


= form_for @manufacturer do |f|
  = f.label :name, "Name: "
  = f.text_field :name
  %br
  %br
  = f.label :country, "Country: "
  = f.text_field :country
  %br
  %br
  = f.submit "Submit new manufacturer"
